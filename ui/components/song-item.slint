import { HorizontalBox, Spinner } from "std-widgets.slint";

export struct Song {
    title: string,
    is_downloading: bool,
}

export component SongItem inherits Rectangle {
    in property <string> title;
    in property <bool> is_downloading: false;
    callback download_clicked;

    height: 90px;
    border-width: 2px;
    border-color: #444;
    border-radius: 20px;

    HorizontalBox {
        spacing: 20px;
        padding: 15px;

        Text {
            text: title;
            vertical-alignment: center;
            font-size: 18px;
            horizontal-stretch: 1;
        }

        Rectangle {
            width: 40px;
            height: 40px;
            border-radius: 20px;

            Spinner {
                indeterminate: root.is_downloading;
                visible: root.is_downloading;
            }

            TouchArea {
                clicked => {
                    root.download_clicked();
                }
            }
        }
    }
}
